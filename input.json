    "number of segments": 10,
    "trim limits": {
      "xlim": [ -1e-6, 1e-6 ],
      "ylim": [ 0, 1e-7 ],
      "zlim": [ -1e-6, 1e-6 ]
    },

    "exciton velocity [m/s]": 2,
    "monte carlo time step": 1e-15,
    "Number of particle in the simulation":2000,
    "number of sections for injection region": 3,
